{
  "manifest_version": 2,
  "name": "YaDisk Alert",
  "version": "1.0",
  "description": "Звуковые уведомления при загрузке новых видео на Яндекс Диск",
  "icons": {
    "48": "assets/images/logo.png"
  },
  "permissions": ["storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  }
}
