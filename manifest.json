{
  "manifest_version": 2,
  "name": "YaDisk Alert",
  "version": "1.2",
  "description": "Звуковые уведомления при загрузке новых видео на Яндекс Диск",
  "icons": {
    "48": "assets/images/logo.png"
  },
  "permissions": ["storage"],
  "background": {
    "scripts": ["src/js/background.js"],
    "persistent": true,
    "type": "module"
  },
  "browser_action": {
    "default_popup": "src/html/popup.html"
  }
}

